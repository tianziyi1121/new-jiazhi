<view class="content">
  <view class="order-line"></view>
  <view class="bank-list pad30 flj f16 fc">
    <view>持卡人姓名</view>
    <input placeholder="请输入持卡人姓名" value="{{form.bank_username}}" placeholder-style="color: #aaa;" bindinput="bindBank" data-name="bank_username"></input>
  </view>
  <view class="lsh_bank_line"></view>
  <view class="bank-list pad30 flj f16 fc">
    <view>开卡银行</view>
    <input placeholder="请输入开卡银行" value="{{form.bank_name}}" placeholder-style="color: #aaa;" bindinput="bindBank" data-name="bank_name"></input>
  </view>
  <view class="lsh_bank_line"></view>
  <view class="bank-list pad30 flj f16 fc">
    <view>银行卡号</view>
    <input placeholder="请输入银行卡号" value="{{form.bank_no}}" placeholder-style="color: #aaa;" bindinput="bindBank" data-name="bank_no"></input>
  </view>
  <view class="lsh_bank_line"></view>
  <view class="bank-list pad30 flj f16 fc">
    <view>开卡地区</view>
    <input placeholder="请输入开卡地区" value="{{form.bank_area}}" placeholder-style="color: #aaa;" bindinput="bindBank" data-name="bank_area"></input>
  </view>
  <view class="lsh_bank_line"></view>
  <button class="bankBtn f14" bindtap="bindData">保存</button>
</view>