/* pages/position/position.wxss */
@import "../../common/common.wxss";
.position-title {
  height: 80rpx;
  border-bottom: 2rpx solid #ccc;
  line-height: 76rpx;
  width: 750rpx;
  /* margin-top: -40rpx; */
  background: #fff;
}
.position-title > view {
  padding: 0 20rpx;
  max-width: 50%rpx;
}
.position-title .active{
  color: #37CF6B;
}
.active > view {
  width: 100%;
  height: 4rpx;
  background: #37CF6B;
}
.position-swiper {
  height: 528rpx;
  width: 750rpx;
  background: #fff;
}
.position-item {
  padding-left: 62rpx;
  text-align: left;
}
.item {
  height: 88rpx;
  line-height:88rpx;
}
.item.active {
  color: #37CF6B;
}
