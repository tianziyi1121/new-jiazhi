@import "../../common/common.wxss";
.loginBox { width: 100%; height: 100%; background: rgba(0,0,0,0.3); position: fixed; top: 0; left: 0; bottom: 0; right: 0; z-index: 100;}
.loginContent { width: 500rpx; position: fixed; left: 50%; margin-left: -250rpx; border-radius: 18rpx;background: #fff; z-index: 101;  top: 38%; }
.loginTip { margin-top: 40rpx;}
.loginTitle { margin-top: 40rpx; color: #888;}
.loginBtn { margin-bottom: 40rpx;}
.loginBtn > button { width: 200rpx; margin-top: 40rpx; background: #fff;}
.loginBtn > button::after { border: 4rpx solid #37cf6b;}
.loginBtn > button:nth-child(1) { color: #37cf6b;}
.loginBtn > button:nth-child(2) { color: #fff; background: #37cf6b;}