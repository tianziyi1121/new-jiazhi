/* 背景色 */
.content { background: #fff;}
/* flex布局 */
.fl { display: flex;}
.flj { display: flex; justify-content: space-between;}
.fljc{ display: flex; flex-direction: column; justify-content: space-between; flex: 1;}
.fl1 { display: flex; justify-content: space-between;flex: 1;}
.flw { display: flex; flex-wrap: wrap;}
/* 定位 */
.pr { position: relative;}
.pa { position: absolute;}
.pf { position: fixed;}
/* 圆角 */
.br5 { border-radius: 10rpx;}
.br6 { border-radius: 16rpx;}
/* 字体 */
.f12 { font-size: 24rpx;}
.f13 { font-size: 26rpx;}
.f14 { font-size: 28rpx;}
.f16 { font-size: 32rpx;}
/* 居中 */
.tac { text-align: center;}
.tar { text-align: right;width: 100%;}
.tei { text-indent: 2em;}
/* border线 */
.borno { border: 2rpx solid #eeeeee; border-left: none; border-right: none;}
/* 三角 */
.borderTriangle{ color: #6b6b6b;}
.borderActive{ color: #37cf6b;}
.borderTriangle > view { width: 0; height: 0; border-left: 10rpx solid transparent; border-right: 10rpx solid transparent; border-top: 10rpx solid #6b6b6b; position: absolute; right:16rpx; top:18rpx;}
 .borderActive > view{ width: 0; height: 0; border-left: 10rpx solid transparent; border-right: 10rpx solid transparent; border-top: 10rpx solid #37cf6b; position: absolute; right:16rpx; top:18rpx;}
/* 加粗 */
.fb { font-weight: bold;}
/* 文字超出部分隐藏 */
.over4 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box;  -webkit-box-orient: vertical;  -webkit-line-clamp: 4;}
.over3 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box;  -webkit-box-orient: vertical;  -webkit-line-clamp: 3;}
.over2 { overflow: hidden; text-overflow: ellipsis; display: -webkit-box;  -webkit-box-orient: vertical;  -webkit-line-clamp: 2;}
/* 文字不换行，超出部分省略号 */
.overn { overflow: hidden; text-overflow:ellipsis; white-space: nowrap;}
/* 边距 */
.pad30 { padding: 20rpx 30rpx 0;}
.pad3 { padding: 0 30rpx;}
/* 图片跟文字对齐 */
.vm { vertical-align:middle;}
/* view居中 */
.ma0 { margin: 0 auto;}
/* 空白 */
.order-blank { height: 100rpx;}
.order-margin { height: 88rpx;}
/* 线 */
.order-line { width:100%; height: 20rpx; background: #F5F5F5;}
.user-line { height: 2rpx; background: #EEE; margin-left: 30rpx;}
.rechange-line { height: 2rpx; background: #EEE;}
.view-line{ width: 100%; height: 2rpx; background: #EEE; margin: 0 30rpx;}
/* 字体颜色 */
.fc { color: #333;}
.f9 { color: #999;}
/* 按钮 100% */
.apply-btn { margin: 30rpx; height: 88rpx; line-height: 88rpx; background: #37CF6B; color: #fff; border-radius: 10rpx; }
.mar30 { margin: 0 30rpx;}
/* 弹窗 */
.view-bag { position: fixed; top: 0; left: 0; bottom: 0; right: 0; z-index: 1000; background: rgba(0,0,0,.4);}
.transformDome { transform: translateY(100%); -webkit-transform: translateY(100%)}
/* 背景色 */
.baj { background: #fff;}
.pad40 { padding-top: 40rpx;}
.view-loading { display: block;}
